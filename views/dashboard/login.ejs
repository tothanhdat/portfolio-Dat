<script>
    $(document).on('click', '.btnDangNhap', function(e) {
        e.preventDefault();

        let email = $('#email').val().trim();
        let password = $('#password').val().trim();

        if (email.length < 1 || password.length < 1) {
            toastr['warning']('Email hoặc mật khẩu không được để trống', 'Thông báo');
        } else {
            $.ajax({
                url: `/tothanhdat/login`,
                method: 'POST',
                data: {
                    email, password
                },
                success: resp => {

                    console.log()

                    if (!resp.error) {

                        toastr['success']('Đăng nhập thành công', 'Thông báo');

                        setTimeout(function(){ 
                            location.href = `/user/account-setting?userID=${resp.data.infoUser._id}`
                        }, 500);

                    } else {

                        return toastr['warning']('Email hoặc mật khẩu không chính xác', 'Thông báo');
                    }
                },

                error: err => console.log({  err })
            });
        }
    })
</script>
